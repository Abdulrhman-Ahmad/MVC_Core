@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="d-flex">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Logged In -->
        <div class="d-flex justify-content-between mx-3 btn-dark btn">
            <!-- Image -->
            <div class="d-flex align-items-center mx-2">
                <img class="img-fluid rounded-5" src="https://www.picsum.photos/200/200" alt="ProfilePic"
                     width="35px" height="35px">
            </div>
            <!-- Name -->
            <div class="d-flex align-items-center">
                Abdulrahman
            </div>
        </div>

        <!-- Logout -->
        <div class="d-flex align-items-center p-2">
            <a asp-action="Logout" asp-controller="Account"
               class="btn btn-dark mx-1 nav-link text-white p-2">Logout</a>
        </div>
    }
    else
    {
        <!-- Unlogged -->
        <div class="d-flex align-items-center p-2">
            <a asp-action="Register" asp-controller="Account"
               class="btn btn-dark mx-1 nav-link text-white p-2">Register </a>
        </div>
        <div class="d-flex align-items-center p-2">
            <a asp-action="Login" asp-controller="Account"
               class="btn btn-dark mx-1 nav-link text-white p-2">Login </a>
        </div>
    }
</div>